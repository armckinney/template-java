{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/bin": true,
        "**/obj": true,
        "**/.vs": true
    },
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker",
        "editor.formatOnSave": false
    },
    "[xml]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "redhat.vscode-xml"
    },
    "java.configuration.updateBuildConfiguration": "interactive"
}