{
	"name": "template-java",
	"dockerComposeFile": [
		"../docker-compose.yaml"
	],
	"service": "dev-container",
	"workspaceFolder": "/workspaces/template-java",
  	"postCreateCommand": "cd $WORKSPACE/",
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "bash",
						"icon": "terminal-bash"
					}
				}
			},
			"extensions": [
				"yzhang.markdown-all-in-one",
                "ms-azuretools.vscode-docker",
				"vscjava.vscode-java-pack"
			]
		}
	}
}